# move windows to space
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6
ctrl + shift - 7 : yabai -m window --space 7
ctrl + shift - 8 : yabai -m window --space 8
ctrl + shift - 9 : yabai -m window --space 9
ctrl + shift - 0 : yabai -m window --space 10

# app shortcuts
# Finder
ctrl + shift - f : open ~

# Safari
ctrl + shift - s : osascript -e 'tell application "Safari" to make new document' -e 'tell application "Safari" to activate'

# Kitty
# ctrl + shift - t : /Applications/kitty.app/Contents/MacOS/kitty --single-instance --instance-group=kitty -d ~

# Ghostty
ctrl + shift - t : open -a "Ghostty"

# Nimble Commander
ctrl + shift - n : open -a "Nimble Commander.app"

# Disable mail shortcut in Safari
cmd - i [
	"safari"       : passthrough
]
cmd + shift - i [
	"safari"       : passthrough
]

# Disable print shortcut in Finder
cmd + shift - p [
	"finder"       : passthrough
]
cmd - p [
	"finder"       : passthrough
]
